    <div id="columns" >
      <div id="side" >
        <a  href="home.html">Home</a> <br/>
        <a  href="question.html">Questions</a> <br/> 
        <a  href="news.html">News</a> <br/>  
        <a  href="contact.html">Contact</a> <br/>
      <p>Today is:<%= Date.today() %></p>
      </div>
    <div id="main">
    <%= yield %>
    </div>
    <div id="bottom" >
      <p>Progprog Books Online Store</p>
      <p>Design By tomlv2018</p>
    </div>
    </div>
  </body>
</html>
